{{> partials/header }}
{{> partials/categories }}

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-12 m-auto">
      <h1 class="mt-4 mb-4 text-center">Contact Us</h1>
      <!-- Flash message -->
      {{#if successMsg}}
        <div id="success" class="alert alert-success">
          {{successMsg}}
        </div>
      {{/if}}
    </div>
    <div class="col-lg-8 col-md-12 text-justify m-auto">
      <!-- Introduction -->
      <div class="mt-4 mb-4">
        <p>We value our customers and strive to provide the best shopping experience possible. If you have any questions, concerns, or feedback about our products or services, please don't hesitate to reach out to us.<br />
          Our friendly and knowledgeable customer service team is available to assist you through phone, email, or in-store. We look forward to hearing from you! <i>Monday to Saturday: 10AM to 10PM.</i> <br />
          Please feel free to contact us at any time, including weekends. We make it a priority to respond to all emails promptly, so you can expect to hear back from us no matter when you reach out. Don't hesitate to get in touch if you have any questions, comments, or concerns - we're here to help!
        </p>
      </div>
      <!-- Email contacts -->
      <div class="mt-4 mb-4">
        <p>
          <h6><i>Email Contact:</i></h6>
        </p>
        <p>
          For general inquiries:
          <a href="mailto:{{email}}">
            <i class="fa fa-envelope" aria-hidden="true"></i>
            <u>{{email}}</u>
          </a>
        </p>
       
      </div>
      <!-- Phone contacts -->
      <div class="mt-4 mb-4">
        <p>
          <h6><i>Phone Contact:</i></h6>
        </p>
        <p>
          Call center phone 1:
          <a href="tel:555-555-5555">
            <i class="fa fa-phone" aria-hidden="true"></i>
            555-555-5555
           </a>
        </p>
        
      </div>
    </div>
    <!-- Contact form -->
    <div class="col-lg-8 col-md-12 m-auto">
      <div class="mt-5 mb-4">
        <h2>Contact Form</h2>
        <!-- Error flash message -->
        {{#if errorMsg}}
          <div id="flash-msg" class="alert alert-danger">
            {{#each errorMsg}}
              <p>{{this}}</p>
            {{/each}}
          </div>
        {{/if}}
        <form action="/pages/contact-us" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" class="form-control" name="name" id="name" required />
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" name="email" id="email" required />
          </div>
          <div class="form-group">
            <label for="message">Message contents</label>
            <textarea class="form-control" name="message" id="message" rows="5" placeholder="Please share your message here..." required></textarea>
          </div>
          <input type="hidden" name="_csrf" value="{{csrfToken}}" />
          <button type="submit" class="btn btn-primary button-style">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

{{> partials/footer}}
